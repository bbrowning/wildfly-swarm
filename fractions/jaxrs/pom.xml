<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.wildfly.boot</groupId>
        <artifactId>wildfly-boot-fractions</artifactId>
        <version>1.0.0.Alpha1-SNAPSHOT</version>
        <relativePath>../</relativePath>
    </parent>

    <groupId>org.wildfly.boot</groupId>
    <artifactId>wildfly-boot-jaxrs</artifactId>

    <name>WildFly Boot: JAX-RS</name>
    <description>WildFly Boot: JAX-RS</description>

    <packaging>jar</packaging>

    <properties>
      <root-module>org.jboss.as.jaxrs</root-module>
      <export-modules>
        javax.ws.rs.api
      </export-modules>
      <extra-modules>
        javax.json.api
        org.jboss.resteasy.resteasy-jackson2-provider
        org.jboss.resteasy.resteasy-json-p-provider
      </extra-modules>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.wildfly.boot</groupId>
                <artifactId>wildfly-boot-fraction-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
          <groupId>org.wildfly.boot</groupId>
          <artifactId>wildfly-boot-bean-validation</artifactId>
        </dependency>
        <dependency>
          <groupId>org.wildfly.boot</groupId>
          <artifactId>wildfly-boot-ee</artifactId>
        </dependency>
        <dependency>
          <groupId>org.wildfly.boot</groupId>
          <artifactId>wildfly-boot-io</artifactId>
        </dependency>
        <dependency>
          <groupId>org.wildfly.boot</groupId>
          <artifactId>wildfly-boot-logging</artifactId>
        </dependency>
        <dependency>
          <groupId>org.wildfly.boot</groupId>
          <artifactId>wildfly-boot-naming</artifactId>
        </dependency>
        <dependency>
          <groupId>org.wildfly.boot</groupId>
          <artifactId>wildfly-boot-request-controller</artifactId>
        </dependency>
        <dependency>
          <groupId>org.wildfly.boot</groupId>
          <artifactId>wildfly-boot-security</artifactId>
        </dependency>
        <dependency>
          <groupId>org.wildfly.boot</groupId>
          <artifactId>wildfly-boot-transactions</artifactId>
        </dependency>
        <dependency>
          <groupId>org.wildfly.boot</groupId>
          <artifactId>wildfly-boot-undertow</artifactId>
        </dependency>
        <dependency>
          <groupId>org.wildfly.boot</groupId>
          <artifactId>wildfly-boot-weld</artifactId>
        </dependency>


        <dependency>
          <groupId>org.jboss.resteasy</groupId>
          <artifactId>jaxrs-api</artifactId>
        </dependency>

        <dependency>
          <groupId>org.wildfly.boot</groupId>
          <artifactId>wildfly-boot-container</artifactId>
          <exclusions>
            <exclusion>
              <groupId>*</groupId>
              <artifactId>*</artifactId>
            </exclusion>
          </exclusions>
        </dependency>
        <dependency>
          <groupId>org.jboss</groupId>
          <artifactId>jboss-dmr</artifactId>
          <scope>provided</scope>
        </dependency>
        <dependency>
          <groupId>org.wildfly.core</groupId>
          <artifactId>wildfly-controller</artifactId>
          <scope>provided</scope>
        </dependency>

        <dependency>
          <groupId>org.jboss.modules</groupId>
          <artifactId>jboss-modules</artifactId>
        </dependency>
        <dependency>
          <groupId>org.wildfly.boot</groupId>
          <artifactId>wildfly-boot-bootstrap</artifactId>
        </dependency>
    </dependencies>

</project>
